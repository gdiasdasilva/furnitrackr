<%= render "partials/page_title", title: "Contact us", subtitle: "Leave us a message to ask a question or report any issues." %>

<section class="contact-us-section">
  <div class="columns">
    <div class="column is-three-fifths is-offset-one-fifth">
      <%= form_with url: contact_us_path, method: "post", local: true do %>
        <div class="field">
          <%= label_tag :email, "Your e-mail address", class: "label" %>
          <div class="control">
            <%= email_field_tag :email, nil, placeholder: "e.g. john@example.com", class: "input", required: true %>
          </div>
        </div>
        <div class="field">
          <%= label_tag :message, "Message", class: "label" %>
          <div class="control">
            <%= text_area_tag :message, nil, placeholder: "Leave us a message...", required: true, class: "textarea" %>
          </div>
        </div>
        <div class="field">
          <%= label_tag :math, "How much is 10 minus 5?", class: "label" %>
          <div class="control">
            <%= text_field_tag :math, nil, placeholder: "e.g. 7", class: "input", required: true %>
          </div>
        </div>
        <%= submit_tag "Send", class: "button is-primary is-fullwidth" %>
      <% end %>
    </div>
  </div>
</section>
