<%= form_for :session, url: session_path do |form| %>
  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <%= form.text_field :email, type: 'email', class: 'input', placeholder: 'e.g. alexsmith@gmail.com' %>
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <%= form.password_field :password, class: 'input', placeholder: '********' %>
    </div>
  </div>

  <div class="control">
    <%= form.submit 'Sign in', class: 'button is-link' %>
    <%= link_to t(".forgot_password"), new_password_path, class: 'button is-white' %>
  </div>
<% end %>
