<div id="clearance" class="password-reset">
  <%= render "partials/page_title", title: "Reset your password" %>

  <p class="content"><%= t(".description") %></p>

  <%= form_for :password, url: passwords_path do |form| %>
    <div class="field">
      <label class="label">Email</label>
      <div class="control">
        <%= form.text_field :email, type: 'email', class: 'input', placeholder: 'e.g. alexsmith@gmail.com' %>
      </div>
    </div>

    <div class="submit-field">
      <%= form.submit 'Reset password', class: 'button is-primary' %>
    </div>
  <% end %>
</div>
